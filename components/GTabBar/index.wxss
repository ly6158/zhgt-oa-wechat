.global-tab-bar {
  width: 100%;
  height: 120rpx !important;
  background-color: var(--bg-white);
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.global-tab-bar__button {
  width: 64rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #C3C3C3
}

.active_button {
  color: var(--color-primary) !important;
}

.global-tab-bar__button .iconfont {
  width: 18px;
  height: 18px;
  margin-bottom: 4px;
  font-size: 18px;
}

.button__content {
  width: 64rpx;
  font-family: 'Alibaba PuHuiTi';
  font-style: normal;
  font-weight: 600;
  font-size: 10px;
  text-align: center;
  text-transform: uppercase;
}