.button-wrap{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}

.sign-button{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}

.sign-item{
  display: flex;
  flex-direction: column;
  padding-top: 16rpx !important;
  padding-bottom: 16rpx !important;
}

.sign-date{
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.sign-content{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.tips{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;

  position: absolute;
  left: 0;
  bottom: 40rpx;
}