<g-layout title="首页" isTabBar="{{false}}" loading="{{page_loading}}">
  <g-scroll>
    <view class="list">
      <view class="item bg-gradual-red" bindtap="report">
        <view class="left">
          <view class="title">日报</view>
          <view class="describe">总结今天的工作内容</view>
        </view>
        <view class="right">
          <view class="icon cuIcon-text"></view>
        </view>
      </view>

      <view class="item bg-gradual-orange" bindtap="sign">
        <view class="left">
          <view class="title">打卡</view>
          <view class="describe">上下班签到</view>
        </view>
        <view class="right">
          <view class="icon cuIcon-locationfill"></view>
        </view>
      </view>

      <view class="item bg-gradual-pink" bindtap="project">
        <view class="left">
          <view class="title">文档</view>
          <view class="describe">项目相关的文档资料</view>
        </view>
        <view class="right">
          <view class="icon cuIcon-file"></view>
        </view>
      </view>
      
      <!-- 管理员 菜单 -->
      <view class="item bg-gradual-red" bindtap="reportManager" wx:if="{{flag === 'admin'}}">
        <view class="left">
          <view class="title">日报</view>
          <view class="describe">所有的日志</view>
        </view>
        <view class="right">
          <view class="icon cuIcon-text"></view>
        </view>
      </view>
    </view>
  </g-scroll>
</g-layout>